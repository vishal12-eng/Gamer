{
  "name": "futuretechjournal",
  "version": "1.0.0",
  "type": "module",
  "description": "An ultra-modern, AI-powered news and blog website.",
  "private": true,
  "scripts": {
    "preinstall": "npm cache clean --force",
    "dev": "node server/index.cjs & vite",
    "dev:frontend": "vite",
    "dev:backend": "node server/index.cjs",
    "build": "vite build && npm run seo:generate",
    "preview": "vite preview",
    "seo:generate": "node scripts/generate-sitemap.cjs && node scripts/generate-robots.cjs",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@google/genai": "^1.29.1",
    "@neondatabase/serverless": "^1.0.2",
    "@netlify/functions": "^2.6.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.22",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "postcss": "^8.5.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet-async": "2.0.5",
    "react-router-dom": "6.22.3",
    "tailwindcss": "^4.1.17",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "netlify-cli": "^23.12.1",
    "typescript": "^5.5.3",
    "vite": "^5.2.0"
  }
}
